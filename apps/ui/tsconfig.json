{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./",

    /* Paths */
    "paths": {
      "pages/*": ["./src/pages/*"],
      "hooks/*": ["./src/hooks/*"],
      "components/*": ["./src/components/*", "./src/@/components/*"],
      "@/utils": ["./src/@/lib/utils"],
      "utils/*": ["./src/utils/*"],
      "lib/*": ["./lib/*"],
      "static/*": ["./src/static/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,

    // From hyperdrive-trading
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": ["src", "lib"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
